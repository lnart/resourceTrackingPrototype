<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.1.2/dist/chart.umd.min.js"></script>
    <title>Document</title>
</head>
<body>
    <header>
        <div class="heading">
            <h2>Keep It Safe</h2>
            <h3 class="headline-2">Track Your Gas Consumption</h3>
        </div>
    </header>
    <canvas id='myChart' width="200" height="50"></canvas>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const ctx = document.getElementById('myChart');
        let x_axis = JSON.parse(`<%- JSON.stringify(x_axis) %>`)
        let gasCounts = JSON.parse(`<%- JSON.stringify(gasCounts) %>`)
        let gasPrices = JSON.parse(`<%- JSON.stringify(gasPrices) %>`)
        new Chart(ctx, {
          type: 'line',
          data: {
            labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'Octobre', 'November', 'December'],
            datasets: [{
              label: 'Consumption in KwH',
              data: gasCounts,
              borderWidth: 1
            }, {
                type: 'line',
                data: gasPrices,
                label: 'Price in Euro'
              }]
      },
          options: {
            scales: {
              y: {
                beginAtZero: true,
                max: 10000,
              }
            }
          }
        });
      </script>
</body>
</html>